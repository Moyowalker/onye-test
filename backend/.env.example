# Auth0 Configuration for JWT Validation
# Copy this file to .env and fill in your actual Auth0 values

# Your Auth0 domain (e.g., "your-tenant.auth0.com")
AUTH0_DOMAIN=your-auth0-domain.auth0.com

# Your Auth0 API identifier/audience (e.g., "https://your-api.example.com")
AUTH0_AUDIENCE=https://your-api.example.com

# Auth0 algorithm (typically RS256 for JWKS)
AUTH0_ALGORITHM=RS256

# Optional: Cache TTL for JWKS keys (in seconds, default: 3600)
JWKS_CACHE_TTL=3600

# Optional: Enable debug logging for authentication
AUTH_DEBUG=false

# Database configuration (if using real database instead of mock data)
# DATABASE_URL=postgresql://user:password@localhost:5432/fhir_db

# CORS origins for production (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Environment (development, staging, production)
ENVIRONMENT=development

# FHIR Repository configuration
# Choose 'mock' (default) or 'hapi'
FHIR_SERVER_TYPE=mock

# Base URL for the HAPI FHIR server (R4)
FHIR_BASE_URL=https://hapi.fhir.org/baseR4

# Request timeout in milliseconds
FHIR_TIMEOUT_MS=10000